{
	"info": {
		"_postman_id": "893c834a-9f4a-4e2a-a9e9-d4cbae3d2e2b",
		"name": "High Contention - Image Flows",
		"description": "Collection for testing image matching and S3 upload flows using dHash and presigned URLs.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Match Image",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"dhash\": 1084277735398604800\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/leetcode/maze/images/match",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"leetcode",
						"maze",
						"images",
						"match"
					]
				},
				"description": "Checks if an image with a similar dHash exists. Returns a signed GET URL if found."
			},
			"response": []
		},
		{
			"name": "Request Upload URL",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.environment.set(\"upload_url\", jsonData.uploadUrl);",
							"pm.environment.set(\"s3_key\", jsonData.s3Key);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{base_url}}/leetcode/maze/images/upload-url",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"leetcode",
						"maze",
						"images",
						"upload-url"
					]
				},
				"description": "Generates a UUID-based S3 key and a presigned PUT URL for direct upload."
			},
			"response": []
		},
		{
			"name": "Upload to S3 (Manual Step)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "image/jpeg",
						"type": "text"
					}
				],
				"body": {
					"mode": "file",
					"file": {
						"src": ""
					}
				},
				"url": {
					"raw": "{{upload_url}}",
					"host": [
						"{{upload_url}}"
					]
				},
				"description": "Perform a PUT request to the presigned URL obtained from the previous step. You need to select a file in the Body tab."
			},
			"response": []
		},
		{
			"name": "Commit Image",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"dhash\": 1084277735398604800,\n    \"s3Key\": \"{{s3_key}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/leetcode/maze/images",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"leetcode",
						"maze",
						"images"
					]
				},
				"description": "Verifies the image exists in S3 and persists the metadata to the database."
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
